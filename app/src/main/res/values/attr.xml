<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- VolumeView自定义属性 -->
    <declare-styleable name="VolumeView">
        <attr name="touchExpandable" format="boolean"/>
        <attr name="clickValid" format="boolean"/>
        <attr name="viewGravity" format="enum">
            <enum name="TOP" value="48"/>
            <enum name="CENTER" value="17"/>
            <enum name="BOTTOM" value="80"/>
        </attr>
        <attr name="fullWidth" format="boolean"/>
        <attr name="colorBackground" format="color"/>
        <attr name="colorForeground" format="color"/>
        <attr name="colorBall" format="color"/>
        <attr name="promptly" format="boolean"/>
        <attr name="blankDistance" format="dimension"/>
        <attr name="viewHeight" format="dimension"/>
        <attr name="percent" format="integer"/>
    </declare-styleable>

    <!-- LoadStatusView自定义属性 -->
    <declare-styleable name="LoadStatusView">
        <attr name="img_no_data" format="reference"/>
        <attr name="img_no_net" format="reference"/>
        <attr name="img_load_error" format="reference"/>
        <attr name="view_no_data" format="reference"/>
        <attr name="view_no_net" format="reference"/>
        <attr name="view_load_error" format="reference"/>
    </declare-styleable>
</resources>